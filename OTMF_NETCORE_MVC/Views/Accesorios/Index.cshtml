@model IEnumerable<OTMF_NETCORE_MVC.Models.Accesorio>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
 
      <div class="col-1 bg-gradient-primary">

            <partial name="_navigationColumnPartes"/>

        </div>
        <div class="col-10 offset-1">
            <fieldset>
                <legend>Accesorios</legend>
 <table class="table" id="Accessorios">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreAccesorio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreAccesorio)
            </td>
            <td>
                <div class="btns-group">
                            <a asp-action="Edit" asp-route-id="@item.IdAccesorio"   class="btn btn-lg btn-primary">Editar</a> 
            
                <a asp-action="Delete" asp-route-id="@item.IdAccesorio" class="btn btn-lg btn-danger" >Eliminar</a>
                </div>
        
            </td>
        </tr>
}
    </tbody>
</table>


            </fieldset>
  
    </div>
    </div>
    



</div>


@section Scripts{
    <script src="~/js/Accesorios/IndexAccesorios.js" type="text/javascript"></script>
}


