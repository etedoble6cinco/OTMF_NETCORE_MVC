@model IEnumerable<OTMF_NETCORE_MVC.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
    <div class="col-3" >
        <fieldset>
            <legend><h5 class="display-6">Gestionar</h5></legend>
        <div class="d-flex flex-column flex-shrink-0 p-1 bg-light">
  
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
   
      <li>
        <a class="nav-link link-dark active" asp-controller="Configuracion" asp-action="Usuarios">
            <svg class="bi me-2" width="16" height="16"></svg>
         Usuarios
        </a>
      </li>
      
      <li>
        <a class="nav-link link-dark" asp-controller="Configuracion"  asp-action="EstandaresParametros">
            <svg class="bi me-2" width="16" height="16"></svg>
         Estandares & Parametros 
        </a>  
      
      </li>
    </ul>
    <hr>
  
  </div>
  </fieldset>
    </div>
        <div class="col-9">
            <fieldset>
                <legend>Configuracion</legend>
                  <table class="table table-hover" id="Usuarios">
                      <thead>
                          <tr>
                              <th>Email</th>
                              <th>Acciones</th>
                          </tr>
                      </thead>
                      <tbody>
                          @foreach( var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" onclick="ObtenerRolesUsuariosByIdUsuario('@item.IdUsuarios')" data-bs-target="#exampleModal">Asignar Rol</button>
                             
                                </td>
                     
                            </tr>
                        }
                    </tbody>
                      <tfoot></tfoot>
                  </table>
            </fieldset>
    </div>
    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Asignar Roles</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="form-check" id="RolesCheckGroup">
        
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="UpsertRolesUsuariosByIdUsuario()">Save changes</button>
      </div>
    </div>
  </div>
</div>
@section Scripts{
        <script src="~/js/Configuracion/Usuarios.js" type="text/javascript"></script>
}



