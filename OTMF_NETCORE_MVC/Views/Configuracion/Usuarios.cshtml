@model IEnumerable<OTMF_NETCORE_MVC.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
    <div class="col-1 bg-gradient-primary">
                 <partial name="_navigationColumnPartes"/>
        
        </div>
   <div class="col-10 offset-1">
            <fieldset>
                <legend>Configuracion</legend>
                  <table class="table table-hover" id="Usuarios">
                      <thead>
                          <tr>
                              <th>Email</th>
                              <th>Acciones</th>  
                         
                          </tr>
                      </thead>
                      <tbody>
                          @foreach( var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Email
                                </td>
                            
                                <td> 
                                <div class="btns-group">
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" onclick="ObtenerRolesUsuariosByIdUsuario('@item.IdUsuarios')" data-bs-target="#exampleModal">Asignar Rol</button>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" onclick="ObtenerRolesUsuariosByIdUsuarioAsignacionMaquinas('@item.IdUsuarios')" data-bs-target="#AsignacionMaquinas">Asignar Maquina</button>

                                </div>
                                     
                             
                                </td>
                     
                            </tr>
                        }
                    </tbody>
                      <tfoot></tfoot>
                  </table>
            </fieldset>
    </div>
    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Asignar Roles</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="form-check" id="RolesCheckGroup">
        
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary" onclick="UpsertRolesUsuariosByIdUsuario()">Guardar</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="AsignacionMaquinas" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Asignar Maquinas</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="form-check" id="MaquinaCheckGroup">
        <p class="text-start text-muted">Este usuario no esta registrado como operador...</p>
        <p class="text-start text-muted">Asigne el rol de operador para asignar Lineas</p>
        </div>
        <div id="MaquinaSelectControl">

        </div>
        <div id="MaquinasSelected">

        </div>
        <div id="MaquinasRelacionadas">
            <table class="table">
                <thead>
                    <tr>
                        <th>Linea</th>
                         <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="MaquinasAsignadas">

                </tbody>
            </table>

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="InsertRelacionMaquinasUsuarios()">Save changes</button>
      </div>
    </div>
  </div>
</div>
@section Scripts{
        <script src="~/js/Configuracion/Usuarios.js" type="text/javascript"></script>
}



