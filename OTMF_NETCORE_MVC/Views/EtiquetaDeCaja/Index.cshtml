@model IEnumerable<OTMF_NETCORE_MVC.Models.EtiquetaCaja>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
    <partial name="_navigationColumnPartes"/>

        <div class="col-3">
            <fieldset>
                <legend>Etiqueta de Cajas</legend>
 <table class="table" id="EtiquetaDeCaja">
    <thead>
        <tr>
            <th>
                Nombre de Etiqueta de Cajas
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEtiquetaDeCaja)
            </td>
            <td>
                <a asp-action="Edit" onclick="ObtenerEtiquetaDeCaja('@item.NombreEtiquetaDeCaja')" data-bs-toggle="modal" data-bs-target="#exampleModal"   class="btn btn-lg btn-primary">Detalles</a> 
            
                <a asp-action="Delete"  asp-route-id="@item.IdEtiquetaDeCaja" class="btn btn-lg btn-danger" >Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>


            </fieldset>
  
    </div>
    </div>
    



</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="EtiquetaDeCajaImage">

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    
      </div>
    </div>
  </div>
</div>

@section Scripts{
    <script src="~/js/EtiquetaDeCaja/IndexEtiquetaDeCaja.js" type="text/javascript"></script>
}


