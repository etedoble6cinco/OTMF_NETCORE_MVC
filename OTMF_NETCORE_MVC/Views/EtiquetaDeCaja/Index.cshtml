@model IEnumerable<OTMF_NETCORE_MVC.Models.EtiquetaCaja>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
    <partial name="_navigationColumnPartes"/>

        <div class="col-12">
            <fieldset>
                <legend>Etiqueta de Cajas</legend>
 <table class="table" id="EtiquetaDeCaja">
    <thead>
        <tr>
            <th>
                Nombre de Etiqueta de Cajas
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEtiquetaDeCaja)
            </td>
            <td>
                <a asp-action="Edit" onclick="ObtenerEtiquetaDeCaja('@item.NombreEtiquetaDeCaja')" data-bs-toggle="modal" data-bs-target="#exampleModal"   class="btn btn-lg btn-primary">Detalles</a> 
            
                <a asp-action="Delete"  asp-route-id="@item.IdEtiquetaDeCaja" class="btn btn-lg btn-danger" >Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>


            </fieldset>
  
    </div>
    </div>
    



</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="EtiquetaDeCajaImage">

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    
      </div>
    </div>
  </div>
</div>

@section Scripts{
    <script>
        
$(document).ready(function () {


    $("#EtiquetaDeCaja").DataTable({
          dom:'Bfrtip',
        buttons:[
             {
                text:'<i class="fa fa-plus" aria-hidden="true"><div class="badge"></div></i>',
                tittleAttr: 'creadas hoy',
                className:'btn btn-lg btn-secondary',
                action: function() {
                    
                    window.location.href = "@Url.Action("Create")";
                 
                }
            }
        ]
    });

   


});
function ObtenerEtiquetaDeCaja(data) {
    $("#EtiquetaDeCajaImage").html("");
    $("#EtiquetaDeCajaImage").append("<div><img width='250' height='180' class='card' src='/Uploads//Etiquetas/Cajas/"+data+".jpeg'/></div>");
}


    </script>
}


