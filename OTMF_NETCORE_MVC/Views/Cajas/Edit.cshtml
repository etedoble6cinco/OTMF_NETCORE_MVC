@model OTMF_NETCORE_MVC.Models.Caja

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <h1>Editar</h1>

<h4>Caja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCaja" />
            <div class="form-group">
                <label asp-for="NombreCaja" class="control-label"> Nombre de la Caja</label>
                <input asp-for="NombreCaja" class="form-control" />
                <span asp-validation-for="NombreCaja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogoCaja" class="control-label">Logo de la Caja</label>
                <input asp-for="LogoCaja" class="form-control" />
                <span asp-validation-for="LogoCaja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EtiquetaDeCaja" class="control-label">Etiqueta de la Caja</label>
                <input asp-for="EtiquetaDeCaja" class="form-control" />
                <span asp-validation-for="EtiquetaDeCaja" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit"  value="Guardar" class="btn btn-lg btn-primary" />
                 <a asp-action="Index" class="btn btn-lg btn-warning">Regresar</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">

        <div class="form-group">
            <label for="archivo">Subir imagen para etiqueta de Caja</label>
            <input name="archivo" class="form-control" type="file" />
        </div>
    </div>
</div>

<div>
   
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
