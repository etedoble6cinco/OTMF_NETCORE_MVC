
@model IEnumerable<OTMF_NETCORE_MVC.Models.Maquina>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
    <div class="col-3">
        <fieldset>
            <legend><h5 class="display-6">Gestionar</h5></legend>
        <div class="d-flex flex-column flex-shrink-0 p-1 bg-light">
  
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <a  asp-controller="OrdenTrabajoes"  asp-action="Index" class="nav-link link-dark" aria-current="page">
          <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"></use></svg>
          Ordenes de Trabajo
        </a>
      </li> <li class="nav-item">
        <a class="nav-link link-dark" asp-controller="Instructivoes"  asp-action="Index">
          <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"></use></svg>
           Instructivo 
        </a>
      </li>
      <li>
        <a class="nav-link active" asp-controller="Maquinas"  asp-action="Index">
            <svg class="bi me-2" width="16" height="16"></svg>
          Maquina
        </a>
      </li>
      <li>
           <a class="nav-link link-dark" asp-controller="EstadoOrdens"  asp-action="Index">
            <svg class="bi me-2" width="16" height="16"></svg>
          Estado OT
        </a>
      </li>
    </ul>
    <hr>
  
  </div>
  </fieldset>
    </div>

        <div class="col-9">
            <fieldset>
                <legend>Maquinas</legend>
                     <table class="table" id="Maquinas">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreMaquina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoMaquina)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreMaquina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoMaquina)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMaquina">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMaquina">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMaquina">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


            </fieldset>
  
    </div>
    </div>
    



</div>


@section Scripts{
    <script>
        
$(document).ready(function () {


    $("Maquinas").DataTable();

   


});


    </script>
}


