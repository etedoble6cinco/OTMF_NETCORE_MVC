@model IEnumerable<OTMF_NETCORE_MVC.Models.Pintura>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class="row">
     <partial name="_navigationColumnPartes"/>

        <div class="col-9">
            <fieldset>
                <legend>Pinturas</legend>
<table class="table" id="Pinturas">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombrePintura)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePintura)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPintura"    class="btn btn-lg btn-primary">Edit</a> 
         
                <a asp-action="Delete" asp-route-id="@item.IdPintura"  class="btn btn-lg btn-danger" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


            </fieldset>
  
    </div>
    </div>
    



</div>


@section Scripts{
    <script>
        
$(document).ready(function () {


    $("#Pinturas").DataTable({
          dom:'Bfrtip',
        buttons:[
             {
                text:'<i class="fa fa-plus" aria-hidden="true"><div class="badge"></div></i>',
                tittleAttr: 'creadas hoy',
                className:'btn btn-lg btn-secondary',
                action: function() {
                    
                    window.location.href = "@Url.Action("Create")";
                 
                }
            }
        ]
    });

   


});


    </script>
}



