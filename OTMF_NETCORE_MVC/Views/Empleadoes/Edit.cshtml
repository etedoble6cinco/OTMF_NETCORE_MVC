@model OTMF_NETCORE_MVC.Models.Empleado

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row">
        <div class="offset-3 col-6">

            <h6 class="display-6">
               <strong>Editar Empleado</strong>
            </h6>
        </div>

    </div>
<div class="row">
    <div class="offset-3 col-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEmpleado" />
            <div class="form-group">
                <label asp-for="NombreEmpleado" class="control-label"></label>
                <input asp-for="NombreEmpleado" class="form-control" />
                <span asp-validation-for="NombreEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveEmpleado" class="control-label"></label>
                <input asp-for="ClaveEmpleado" class="form-control" />
                <span asp-validation-for="ClaveEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoEmpleadoFk" class="control-label"></label>
                <select asp-for="IdTipoEmpleadoFk" class="form-control" asp-items="ViewBag.IdTipoEmpleadoFk"></select>
                <span asp-validation-for="IdTipoEmpleadoFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTurnoFk" class="control-label"></label>
                <select asp-for="IdTurnoFk" class="form-control" asp-items="ViewBag.IdTurnoFk"></select>
                <span asp-validation-for="IdTurnoFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                 <a class="btn btn-warning" asp-action="Index">Regresar</a>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



 
}
