<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - OTMF</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/OTMF_NETCORE_MVC.styles.css" asp-append-version="true" />
        <link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.min.css"/> 
        <link rel="stylesheet" type="text/css" href="~/lib/daterangepicker/daterangepicker.css" />
        <!-- include the style -->
        <link rel="stylesheet" href="~/lib/alertifyjs/css/alertify.min.css" />
        <!-- include a theme -->
        <link rel="stylesheet" href="~/lib/alertifyjs/css/themes/bootstrap.min.css" />
        <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
        <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    </head>
<body>
    <header id="page-top">
        <nav id="mainNav" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark bg-gradient border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="img-brand" src="~/lib/brand/24261dba-3824-4484-9149-5ba298ae777d.jpeg" width="70" height="50" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="OrdenTrabajoes" asp-action="Index"><div class="btn btn-outline-secondary me-2"> <div class="badge bg-primary"><i class="fas fa-tasks"></i></div> Ordenes de Trabajo</div></a>
                        </li>  
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Empleadoes" asp-action="Index"><div class="btn btn-outline-secondary me-2"><div class="badge bg-primary"><i class="fas fa-user"></i></div> Empleados</div></a>
                        </li>   
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Partes" asp-action="Index"><div class="btn btn-outline-secondary me-2"><div class="badge bg-primary"><i class="fas fa-tools"></i></div> Partes</div></a>
                        </li> 
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="OTEstado" asp-action="Index"><div class="btn btn-outline-secondary me-2"><div class="badge bg-primary"><i class="fas fa-play"></i></div>Estado O.T.</div></a>
                        </li>
                    <!--Barra de navegacion-->
                    </ul>
                    <partial name="_LinksLogin"/>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer >
       
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="~/lib/alertifyjs/alertify.min.js" type="text/javascript"></script>
    <script src="~/lib/daterangepicker/moment.min.js" type="text/javascript"></script>
    <script src="~/lib/daterangepicker/daterangepicker.js" type="text/javascript"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/Dashboard/sb-admin-2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
