@model IEnumerable<OTMF_NETCORE_MVC.Models.Ensamble>

@{
    ViewData["Title"] = "Index";
}



<div class="container-fluid">
    <div class="row">
 <div class="col-1 bg-gradient-primary">

            <partial name="_navigationColumnPartes"/>

        </div>
    

        <div class="col-10 offset-1">
            <fieldset>
                <legend>Ensamble</legend>
  <table class="table" id="Ensamble">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreEnsamble)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEnsamble)
            </td>
            <td>
                <div class="btns-group">
                          <a asp-action="Edit" asp-route-id="@item.IdEnsamble"   class="btn btn-lg btn-primary">Editar</a> 
                <a asp-action="Delete" asp-route-id="@item.IdEnsamble" class="btn btn-lg btn-danger" >Eliminar</a>

                </div>
          
            </td>
        </tr>
}
    </tbody>
</table>


            </fieldset>
  
    </div>
    </div>
    



</div>


@section Scripts{
    <script src="~/js/Ensambles/IndexEnsambles.js" type="text/javascript"></script>
}





